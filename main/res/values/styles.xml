<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for the Bottom Navigation Bar item text -->
    <style name="BottomNavigationItemText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for the Bottom Navigation View -->
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <!-- Apply the custom text appearance style to the menu items -->
        <item name="android:textAppearance">@style/BottomNavigationItemText</item>
        <item name="android:background">@color/dark_purple</item>
    </style>
</resources>
